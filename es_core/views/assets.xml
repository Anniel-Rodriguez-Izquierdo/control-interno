<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--assets-->
    <template id="_assets_primary_variables" inherit_id="web._assets_primary_variables" priority="15">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/primary_variables.scss"/>
        </xpath>
    </template>

    <template id="_assets_secondary_variables" inherit_id="web._assets_secondary_variables" priority="15">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/secondary_variables.scss"/>
        </xpath>
    </template>

    <template id="_assets_backend_helpers" inherit_id="web._assets_backend_helpers" priority="15">
        <xpath expr="//link[@href='/web/static/src/scss/bootstrap_overridden.scss']" position="replace">
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/bootstrap_overridden.scss"/>
        </xpath>
    </template>

    <template id="assets_common" name="es_core assets common" inherit_id="web.assets_common">
        <xpath expr="//link[@href='/web/static/src/scss/ui_extra.scss']" position="replace">
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/ui.scss"/>
        </xpath>
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/fonts.scss"/>
        </xpath>
    </template>

    <template id="assets_backend" name="es_core assets backend" inherit_id="web.assets_backend">
        <xpath expr="//link[@href='/web/static/src/scss/webclient_extra.scss']" position="replace">
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/webclient.scss"/>
        </xpath>
        <xpath expr="//link[@href='/web/static/src/scss/webclient_layout.scss']" position="replace">
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/webclient_layout.scss"/>
        </xpath>
        <xpath expr="//link[@href='/web/static/src/scss/fields_extra.scss']" position="replace">
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/fields.scss"/>
        </xpath>
        <xpath expr="//link[@href='/web/static/src/scss/form_view_extra.scss']" position="replace">
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/form_view.scss"/>
        </xpath>
        <xpath expr="//link[@href='/web/static/src/scss/list_view_extra.scss']" position="replace">
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/list_view.scss"/>
        </xpath>
        <xpath expr="//link[@href='/web/static/src/scss/search_view_extra.scss']" position="replace">
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/search_view.scss"/>
        </xpath>
        <xpath expr="//link[@href='/web/static/src/scss/dropdown_extra.scss']" position="replace">
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/dropdown.scss"/>
        </xpath>
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/home_menu.scss"/>
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/home_menu_layout.scss"/>
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/menu_mobile.scss"/>
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/menu_search.scss"/>
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/control_panel_layout.scss"/>
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/datepicker.scss"/>
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/kanban_view.scss"/>
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/touch_device.scss"/>

            <link rel="stylesheet" type="text/scss" href="/web/static/src/scss/navbar_mobile.scss"/>

            <!--ES_CORE: Styles-->
            <link rel="stylesheet" type="text/css" href="/es_core/static/libs/jquery.gridster/jquery.gridster.css"/>

            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/dashboard_view.scss"/>
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/gantt.scss"/>
            <link rel="stylesheet" type="text/scss" href="/es_core/static/src/scss/main.scss"/>

        </xpath>
        <xpath expr="//script[@src='/web/static/src/js/chrome/web_client.js']" position="replace">
            <script type="text/javascript" src="/es_core/static/src/js/web_client.js"/>
        </xpath>
        <xpath expr="//script[@src='/web/static/src/js/chrome/menu.js']" position="replace">
            <script type="text/javascript" src="/es_core/static/src/js/menu.js"/>
        </xpath>
        <xpath expr="//script[@src='/web/static/src/js/fields/upgrade_fields.js']" position="replace"/>
        <xpath expr="//script[@src='/mail/static/src/js/tour.js']" position="replace"/>
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/es_core/static/src/js/apps.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/control_panel.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/home_menu.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/menu_mobile.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/views/form/form_renderer.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/views/form/form_view.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/views/field/relational_fields.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/views/field/upgrade_fields.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/widgets/debug_manager.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/widgets/user_menu.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/widgets/switch_company_menu.js"/>

            <!--ES_CORE: Libraries-->
            <script type="text/javascript"
                    src="/es_core/static/libs/jquery.effects/jquery.effects.core.min.js"/>

            <script type="text/javascript" src="/es_core/static/libs/jquery.gridster/jquery.gridster.js"/>
            <script type="text/javascript" src="/es_core/static/libs/jquery.gridster/jquery.gridster.with-extras.js"/>

            <!--dashboard scripts-->
            <script type="text/javascript" src="/es_core/static/src/js/views/dashboard/dashboard_renderer.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/views/dashboard/dashboard_model.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/views/dashboard/dashboard_controller.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/views/dashboard/dashboard_view.js"/>

            <!--gantt scripts-->
            <script type="text/javascript" src="/es_core/static/src/js/views/gantt/gantt_renderer.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/views/gantt/gantt_model.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/views/gantt/gantt_controller.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/views/gantt/gantt_view.js"/>

            <!--Services-->
            <script type="text/javascript" src="/es_core/static/src/js/services/sound_service.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/services/report_service.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/services/alert_service.js"/>

            <!--Widgets-->
            <script type="text/javascript" src="/es_core/static/src/js/systray/systray_alert.js"/>
            <script type="text/javascript" src="/es_core/static/src/js/report/export_buttons.js"/>

            <!--YAP Scripts-->
            <script type="text/javascript" src="/es_core/static/src/js/yap_numpad_dot.js"/>
            <script src="/es_core/static/libs/jquery.resizableColumns/jQuery.resizableColumns.js"/>
            <script src="/es_core/static/src/js/yap_list.js"/>
        </xpath>
    </template>

    <template id="webclient_bootstrap" inherit_id="web.webclient_bootstrap">

        <xpath expr="//t[@t-set='head']" position="after">
            <t t-set="head_es_core">
                <!-- Chrome, Firefox OS and Opera -->
                <meta name="theme-color" content="#875A7B"/>
                <link rel="icon" sizes="192x192" href="/es_core/static/src/img/mobile-icons/android-192x192.png"/>

                <!-- iOS Safari -->
                <meta name="apple-mobile-web-app-capable" content="yes"/>
                <meta name="apple-mobile-web-app-status-bar-style" content="black"/>
                <link rel="apple-touch-icon" href="/es_core/static/src/img/mobile-icons/apple-152x152.png"/>

                <!-- Windows Phone -->
                <meta name="msapplication-navbutton-color" content="#875A7B"/>
                <meta name="msapplication-TileColor" content="#875A7B"/>
                <meta name="msapplication-TileImage"
                      content="/es_core/static/src/img/mobile-icons/windows-144x144.png"/>
            </t>
            <t t-set="head" t-value="head_es_core + (head or '')"/>
        </xpath>
    </template>

    <template id="webclient_login" inherit_id="web.login_layout">
        <xpath expr="//t[@t-call='web.layout']/t[last()]" position="after">
            <t t-set="body_classname" t-value="'o_home_menu_background'"/>
            <t t-set="login_card_classes" t-value="'rounded-0 shadow-sm bg-white'"/>
        </xpath>

        <xpath expr="//div[hasclass('card-body')]/div/a" position="replace">
            <a href="https://erpstation.com" target="_blank">
                Powered by
                <span>ERP Station</span>
            </a>
        </xpath>
    </template>
</odoo>
